extends ../../layouts/default.pug

block main
    if(role.permission.includes("accounts_view"))
        h1.mb-4 Danh sách blog
        .card.mb-3
            .card-header Danh sách
            .card-body
                .row
                    .col-8
                    // nội dung bên trái (nếu có)
                    .col-4.text-right
                        if(role.permission.includes("accounts_create"))
                            a.btn.btn-outline-success(href=`${prefixAdmin}/blogs/create`) + Thêm mới
                table(class="table table-hover table-sm")
                    thead
                        tr
                            th STT
                            th Ảnh bìa
                            th Title
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in records
                            tr
                                td #{index + 1}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                if(role.permission.includes("accounts_edit"))
                                    td
                                        if item.status === "active"
                                            a(
                                                href="javascript:;"
                                                class="badge badge-success"
                                                data-status="active"
                                            ) Hoạt động
                                        else
                                            a(
                                                href="javascript:;"
                                                class="badge badge-danger"
                                                data-status="inactive"
                                            ) Dừng hoạt động
                                else 
                                    td
                                        if item.status === "active"
                                            button(
                                                class="badge badge-success"
                                            ) Hoạt động
                                        else
                                            button(
                                                class="badge badge-danger"
                                            ) Dừng hoạt động
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/blogs/detail/${item.id}`
                                    ) Chi tiết
                                    if(role.permission.includes("accounts_edit"))
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`${prefixAdmin}/blogs/edit/${item.id}`
                                        ) Sửa
                                    if(role.permission.includes("accounts_delete"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            type="button"
                                        ) Xóa
    else 
        div bạn không có quyền xem