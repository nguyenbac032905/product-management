extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/renderOption.pug

block main
    h1(class="mb-4") Chỉnh sửa danh mục sản phẩm
    +alertError(5000)

    form(
        action=`${prefixAdmin}/product-category/edit/${category.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        .form-group
        label(for="title") Tiêu đề
        input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
            value=category.title
        )

        .form-group
        label(for="parent_id") Danh mục cha
        select(name="parent_id" id="parent_id" class="form-control")
            option(value="") Chọn danh mục cha
            if records
            each item in records
                +renderOption(item,"",category.parent_id)

        .form-group
        label(for="desc") Mô tả
        textarea(
            class="form-control texarea-mce"
            id="desc"
            name="description"
            rows="5"
            textarea-mce
            
        ) #{category.description}

        .form-group.upload-image
        label(for="thumbnail") Ảnh
        input(
            type="file"
            class="form-control-file upload-image-input"
            id="thumbnail"
            name="thumbnail"
            accept="image/*"
        )
        img(
            src=category.thumbnail
            class="image-preview upload-image-preview"
        )

        .form-group
        label(for="position") Vị trí
        input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            placeholder="Tự động tăng"
            min="1"
            value=category.position
        )

        .form-group.form-check.form-check-inline
        input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=category.status=="active"
        )
        label(for="statusActive" class="form-check-label") Hoạt động

        .form-group.form-check.form-check-inline
        input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
            checked=category.status=="inactive"
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động

        .form-group
        button(
            type="submit"
            class="btn btn-primary"
        ) cập nhật