extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug
include ../../mixins/filterStatus.pug
block main
    if(role.permission.includes("products-category_view"))
        +alertError(3000)
        +alertSuccess(300)
        h1 Danh mục Bài viết
                        
        .card.mb-3
            .card-header Danh sách Danh mục
            .card-body
                .row 
                    .col-8
                    .col-4
                        if(role.permission.includes("products-category_create"))
                            a.btn.btn-outline-success(href=`${prefixAdmin}/blog-category/create`) Thêm mới

                table(class="table table-hover table-sm" checkbox-multi)
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item,index in category
                            tr
                                td #{index + 1}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.position}
                                if(role.permission.includes("accounts_edit"))
                                    td
                                        if item.status === "active"
                                            a(
                                                href="javascript:;"
                                                class="badge badge-success"
                                                data-status="active"
                                            ) Hoạt động
                                        else
                                            a(
                                                href="javascript:;"
                                                class="badge badge-danger"
                                                data-status="inactive"
                                            ) Dừng hoạt động
                                else 
                                    td
                                        if item.status === "active"
                                            button(
                                                class="badge badge-success"
                                            ) Hoạt động
                                        else
                                            button(
                                                class="badge badge-danger"
                                            ) Dừng hoạt động
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/blog-category/detail/${item.id}`
                                    ) Chi tiết
                                    if(role.permission.includes("accounts_edit"))
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`${prefixAdmin}/blog-category/edit/${item.id}`
                                        ) Sửa
                                    if(role.permission.includes("accounts_delete"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            type="button"
                                        ) Xóa
    else 
        div Bạn không có quyền xem danh mục sản phẩm