extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thêm mới nhóm quyền

  form(
    action=`${prefixAdmin}/roles/edit/${records.id}/?_method=PATCH`
    method="POST"
  )
    .form-group
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=records.title
        required
      )

    .form-group
      label(for="desc") Mô tả
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        value=records.description
      )

    .form-group
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật