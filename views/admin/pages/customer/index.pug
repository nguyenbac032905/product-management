extends ../../layouts/default.pug

block main
    if(role.permission.includes("customers_view"))
        h1.mb-4 Danh sách tài khoản
        .card.mb-3
            .card-header Danh sách
            .card-body
                table(class="table table-hover table-sm")
                    thead
                        tr
                            th STT
                            th Avatar
                            th Họ tên
                            th Email
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in records
                            tr
                                td #{index + 1}
                                td
                                    img(
                                        src=item.avatar
                                        alt=item.fullName
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.fullName}
                                td #{item.email}
                                if(role.permission.includes("customers_edit"))
                                    td
                                        if item.status === "active"
                                            a(
                                                href="javascript:;"
                                                class="badge badge-success"
                                                data-status="active"
                                            ) Hoạt động
                                        else
                                            a(
                                                href="javascript:;"
                                                class="badge badge-danger"
                                                data-status="inactive"
                                            ) Dừng hoạt động
                                else 
                                    td
                                        if item.status === "active"
                                            button(
                                                class="badge badge-success"
                                            ) Hoạt động
                                        else
                                            button(
                                                class="badge badge-danger"
                                            ) Dừng hoạt động
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/customers/detail/${item.id}`
                                    ) Chi tiết
                                    if(role.permission.includes("customers_edit"))
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`${prefixAdmin}/customers/edit/${item.id}`
                                        ) Sửa
                                    if(role.permission.includes("customers_delete"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            type="button"
                                        ) Xóa
                                    if(role.permission.includes("customers_message"))
                                        a(
                                            class="btn btn-primary btn-sm ml-1"
                                            href=`${prefixAdmin}/chat/${item.myRoomId}`
                                        ) Nhắn tin
                                    
    else 
        div bạn không có quyền xem