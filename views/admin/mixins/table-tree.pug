mixin table-tree(item,prefix)
    tr
        td 
            input(
                type="checkbox"
                name="id"
                value=item.id
            )
        td #{item.index}
        td
            img(
            src=item.thumbnail
            alt=item.title
            width="100px"
            height="auto"
            )
        td #{prefix + item.title}
        td  
            input(
                type="number"
                value=item.position
                style="width: 68px"
                min="1"
                name="position"
            )
        if(role.permission.includes("products-category_edit"))
            td  
                if(item.status == "active")
                    a(href="javascript:;" data-status=item.status data-id=`${item.id}` button-change-status class="badge badge-success") Hoạt động
                else 
                    a(href="javascript:;" data-status=item.status data-id=item.id button-change-status class="badge badge-danger") Dừng hoạt động
        else
            td  
                if(item.status == "active")
                    button(class="badge badge-success") Hoạt động
                else 
                    button(class="badge badge-danger") Dừng hoạt động
        td
            if(role.permission.includes("products-category_edit"))
                a(href=`${prefixAdmin}/product-category/edit/${item.id}` class="btn btn-warning btn-sm") Sửa
            a(href=`${prefixAdmin}/product-category/detail/${item.id}` class="btn btn-secondary btn-sm") Chi tiết
            if(role.permission.includes("products-category_delete"))
                button(class="btn btn-danger btn-sm ml-1" button-delete data-id=item.id) Xóa
    -if(item.children && item.children.length > 0)
        each child in item.children 
            +table-tree(child,prefix + "-- ")
    