extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alertSuccess(5000)
    +alertError(5000)

    .container.my-3
        .row
            .col-12
                +box-head("Thanh toán")

        .row
            .col-12
                table.table.table-bordered
                    thead
                        tr
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                    tbody
                        if(products.length > 0)
                            each item,index in products
                                tr
                                    td #{index+1}
                                    td
                                        img(src=item.thumbnail, alt=item.title, width="80px")
                                    td #{item.title}
                                    td #{item.priceNew}
                                    td #{item.quantity}
                                    td #{item.quantity*item.priceNew}
    
    if(products.length > 0)
        .row 
            .col-12
                .card.p-4.my-4
                    form(action="/checkout/order", method="POST")
                        .form-group
                            label(for="fullName") Họ tên
                            input(
                                type="text"
                                class="form-control"
                                id="fullName"
                                name="fullName"
                                required
                            )
                        .form-group
                            label(for="phone") Số điện thoại
                            input(
                                type="text"
                                class="form-control"
                                id="phone"
                                name="phone"
                                required
                            )
                        .form-group
                            label(for="address") Địa chỉ
                            input(
                                type="text"
                                class="form-control"
                                id="address"
                                name="address"
                                required
                            )
                        .form-group
                            button(
                                type="submit"
                                class="btn btn-success btn-block"
                            ) ĐẶT HÀNG
