extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alertSuccess(5000)
    +alertError(5000)

    .container.my-3
        .row
            .col-12
                +box-head("Giỏ hàng")

        .row
            .col-12
                table.table.table-bordered
                    thead
                        tr
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động
                    tbody
                        if(products.length > 0)
                            each item,index in products 
                                tr
                                    td #{index+1}
                                    td
                                        img(src=item.thumbnail, alt=item.title, width="80px")
                                    td
                                        a(href=`/products/detail/${item.slug}`) #{item.title}
                                    td #{item.priceNew}
                                    td
                                        input(
                                            type="number",
                                            name="quantity",
                                            value=item.quantity,
                                            min="1",
                                            data-id=item.id,
                                            style="width: 60px"
                                        )
                                    td #{item.quantity*item.priceNew}
                                    td
                                        a(
                                            href=`/cart/delete/${item.id}`,
                                            class="btn btn-danger"
                                        ) Xóa

        h3.text-right Tổng đơn hàng: #{products.cartTotalPrice}
        .text-right.mt-3
            a.btn.btn-success(href="/checkout") THANH TOÁN
    script(src="/js/cart.js")
