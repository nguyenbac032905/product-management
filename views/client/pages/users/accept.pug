extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
    .container.my-3
        include ../../partials/list-button-users.pug
        .row
            .col-12
                +box-head("Lời mời kết bạn")
        .row(data-users-accept=user.id)
            each user in users
                .col-6(box-user-id=user.id)
                    .box-user.add
                        .inner-avatar
                            img(
                                src=(user.avatar ? user.avatar : "https://cellphones.com.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg")
                                alt=user.fullName
                            )
                        .inner-info
                            .inner-name #{user.fullName}
                            .inner-buttons
                                button.btn.btn-sm.btn-primary.mr-1(
                                    btn-accept-friend=user.id
                                ) Chấp nhận

                                button.btn.btn-sm.btn-secondary.mr-1(
                                    btn-refuse-friend=user.id
                                ) Xóa

                                button.btn.btn-sm.btn-secondary.mr-1(
                                    btn-deleted-friend
                                    disabled
                                ) Đã xóa

                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accepted-friend
                                    disabled
                                ) Đã chấp nhận


block script
    script(src="/js/users.js")