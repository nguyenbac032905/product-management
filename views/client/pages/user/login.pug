extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  +alertError(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng nhập tài khoản

        form(action="/user/login" method="POST")
            .form-group
                label(for="email") Email
                input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                )

            .form-group
                label(for="password") Mật khẩu
                input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                )

            .form-group
                button(
                type="submit"
                class="btn btn-primary btn-block"
                ) Đăng nhập
