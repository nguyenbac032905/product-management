extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head("Chat")
        .row
            .col-12
                .chat(my-id=user.id)
                    .inner-head
                        .inner-avatar EY
                        .inner-name Em Yêu

                    //- Phần nội dung chat
                    .inner-body
                        each chat in chats
                                div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                    if(chat.user_id != user.id)
                                        .inner-name #{chat.infoUser.fullName}
                                    .inner-content #{chat.content}
                    //- Phần nhập nội dung
                    .inner-foot
                        form.inner-form(action="" method="POST")
                            input(type="text" placeholder="Nhập nội dung..." name="content")
                            span(class="button-icon btn btn-light mx-2") <i class="fa-regular fa-face-smile"></i>
                            button(type="submit").send-btn
                                i.fa-solid.fa-paper-plane
    div(class="tooltip" role="tooltip")                            
        emoji-picker